<div class="post-show row">
  <div class="col-md-8">
    <%=image_tag 'icon.png', class: 'image' %>
  </div>
  <div class="col-md-4">
    <div class="user">
      
      <%= link_to @post.user.name, user_path(@post.user), class: 'username' %>
    </div>
    <div class="caption">
      <%= @post.caption %>
    </div>
  </div>
</div>


<div class="delete">
  <% if current_user.posts.exists?(@post.id) %>
    <%= link_to 'Remove', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>