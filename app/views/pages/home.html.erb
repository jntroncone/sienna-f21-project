<h1>Home</h1>
<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <div class="user">
    <div class="avatar">
      <%= image_tag 'icon.png' %>
    </div>
    <div class="username">
      <%= @user.name %>
    </div>
  </div>
      <section class="post">
  <% if post.image.attached? %>
  <%= image_tag post.image %>
  <% end %>
<div class="description">
    <%= post.caption %>
  </div>
</section>
    </section>
  <% end %>
</div>
