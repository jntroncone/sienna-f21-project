<body class="<%= cookies[:theme] %>">

  <% if cookies[:theme] == "light" %>
    <%= link_to "Toggle Dark Theme", root_path(theme: "dark"), class:'like-button text-decoration-none p-2' %>
  <% else %>
    <%= link_to "Toggle Light Theme", root_path(theme: "light"), class:'like-button text-decoration-none p-2' %>
  <% end %>
  
  <%= yield %>

  <% if cookies[:theme] == "light" %>
  <style>
    *{color: black!important;}
    </style>
    <body style="background-color:#B0C19D;">    
      <%= bootstrap_form_for Post.new do |f| %>
        <div class="form-group">
          <%= f.text_field :caption, class: 'bg-light' %>
        </div>
        <div class="form-group">
          <%= f.file_field :image, class: 'ui purple button'%>
        </div>
        <div class="form-group">
          <%= f.text_field :user_id, value: current_user.id, style: "display: none"%>
        </div>
        <br>
        <div class="text-center">
          <%= f.submit 'Create Post', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </body>

  <%else%>
  <style>
    *{color: white!important;}
    </style>
  <body style="background-color:#121212;">    
      <%= bootstrap_form_for Post.new do |f| %>
        <div class="form-group">
          <%= f.text_field :caption, class: 'bg-dark' %>
        </div>
        <div class="form-group">
          <%= f.file_field :image, class: 'ui purple button'%>
        </div>
        <div class="form-group">
          <%= f.text_field :user_id, value: current_user.id, style: "display: none"%>
        </div>
        <br>
        <div class="text-center">
          <%= f.submit 'Create Post', class: 'btn btn-dark' %>
        </div>
      <% end %>
    </body>

  <%end%>
</body>