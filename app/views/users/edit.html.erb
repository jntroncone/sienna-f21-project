<body class="<%= cookies[:theme] %>">

  <% if cookies[:theme] == "light" %>
    <%= link_to "Toggle Dark Theme", root_path(theme: "dark"), class:'like-button text-decoration-none p-2' %>
  <% else %>
    <%= link_to "Toggle Light Theme", root_path(theme: "light"), class:'like-button text-decoration-none p-2' %>
  <% end %>
  
  <%= yield %>

  <% if cookies[:theme] == "light" %>
  <style>
    *{color: black!important;}
    </style>
    <body style="background-color:#B0C19D;">
      <div class="user-edit-page">
        <div class="actions">
          <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" data-toggle="pill" href="#v-pills-home" role="tab" aria-selected="true">Edit Profile</a>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link bg-primary' %>
          </div>
        </div>
        <div class="details tab-content">
          <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
          <%= form_with model: current_user, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
        <div class="form-group row">
          <div class="col-sm-3 col-form-label">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, height: 100, width: 100, class: "avatar-index rounded-circle" %>
            <% else %>
              <%= image_tag 'icon.png' %>
            <% end %>
          </div>
          <div class="col-sm-9">
            <p class="username"><%=current_user.name %></p>

          </div>
        </div>
        <div class="form-group row">
          <%= f.label :avatar, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.file_field :avatar, class: 'form-control', class: 'bg-primary'%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :name, class: 'form-control', class: "bg-primary" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :bio, class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_area :bio, class: 'form-control', class: "bg-primary" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-3">
          </div>
          <div class="col-sm-9">
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
          </div>
        </div>
      </div>
